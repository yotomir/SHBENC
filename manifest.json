{
  "manifest_version": 3,
  "name": "Hidden Scratch Blocks Official",
  "version": "1.1",
  "description": "Adds hidden red blocks to Scratch.",
  "permissions": ["scripting"],
  "host_permissions": ["https://scratch.mit.edu/*"],
  "content_scripts": [
    {
      "matches": ["https://scratch.mit.edu/projects/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://scratch.mit.edu/*"]
    }
  ]
}
